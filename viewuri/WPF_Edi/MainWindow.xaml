<Window x:Name="Login" x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="500">
    <Grid Margin="0,0,-8,-14">
        <TextBox x:Name="usernameTextbox" Height="18" Margin="197,97,0,0" TextWrapping="Wrap" Text="" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" Margin="197,194,0,0" VerticalAlignment="Top" Width="120" Click="loginButton_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="197,78,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.415,2.806"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="197,120,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.395,0.045"/>
        <PasswordBox x:Name="passwordTextbox" HorizontalAlignment="Left" Margin="197,140,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
