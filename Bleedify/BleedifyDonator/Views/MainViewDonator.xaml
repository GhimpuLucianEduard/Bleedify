<Window x:Class="BleedifyDonator.Views.MainViewDonator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BleedifyDonator.Views"
        mc:Ignorable="d"
        Title="MainViewDonator" Height="750" Width="1100">
    <Grid>
        <DataGrid ItemsSource="{Binding Donatii}" ColumnWidth="*" AutoGenerateColumns="False" x:Name="DonationDataGrid" HorizontalAlignment="Left" Height="670" Margin="10,20,0,0" VerticalAlignment="Top" Width="405">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data Donare" Binding="{Binding DataDonare}"/>
                <DataGridTextColumn Header="Etapa donatiei" Binding="{Binding EtapaDonare}"/>
                <DataGridTextColumn Header="Motivul Refuzului" Binding="{Binding MotivRefuz}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
